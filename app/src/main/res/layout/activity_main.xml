<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/activity_main">
    <!--
    android:id="@+id/layout">
    -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:textSize="25dp"
        android:id="@+id/player1Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        android:id="@+id/player2Name"
        android:textSize="25dp"
        android:layout_below="@+id/player1Name"
        android:layout_alignLeft="@+id/player1Name"
        android:layout_alignStart="@+id/player1Name"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 3"
        android:id="@+id/player3Name"
        android:textSize="25dp"
        android:layout_below="@+id/player2Name"
        android:layout_alignLeft="@+id/player2Name"
        android:layout_alignStart="@+id/player2Name"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 4"
        android:id="@+id/player4Name"
        android:textSize="25dp"
        android:layout_below="@+id/player3Name"
        android:layout_alignLeft="@+id/player3Name"
        android:layout_alignStart="@+id/player3Name"
        android:layout_marginTop="80dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/playerLose"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/player4Name"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:id="@+id/player1Life"
        android:textSize="25dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_alignTop="@+id/player1Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:id="@+id/player2Life"
        android:textSize="25dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_alignTop="@+id/player2Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:id="@+id/player3Life"
        android:textSize="25dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_alignTop="@+id/player3Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:id="@+id/player4Life"
        android:textSize="25dp"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_alignTop="@+id/player4Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />






    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="- 5"
        android:id="@+id/player1Minus5"
        android:layout_below="@+id/player1Name"
        android:layout_alignLeft="@+id/player1Name"
        android:layout_alignStart="@+id/player1Name" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/player1Minus"
        android:layout_below="@+id/player1Name"
        android:layout_toRightOf="@+id/player1Minus5"
         />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/player1Plus"
        android:layout_below="@+id/player1Name"
        android:layout_toRightOf="@+id/player1Minus"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+ 5"
        android:id="@+id/player1Plus5"
        android:layout_below="@+id/player1Name"
        android:layout_toRightOf="@+id/player1Plus"
        />



    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="- 5"
        android:id="@+id/player2Minus5"
        android:layout_below="@+id/player2Name"
        android:layout_alignLeft="@+id/player2Name"
        android:layout_alignStart="@+id/player2Name" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/player2Minus"
        android:layout_below="@+id/player2Name"
        android:layout_toRightOf="@+id/player2Minus5"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/player2Plus"
        android:layout_below="@+id/player2Name"
        android:layout_toRightOf="@+id/player2Minus"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+ 5"
        android:id="@+id/player2Plus5"
        android:layout_below="@+id/player2Name"
        android:layout_toRightOf="@+id/player2Plus"
        />


    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="- 5"
        android:id="@+id/player3Minus5"
        android:layout_below="@+id/player3Name"
        android:layout_alignLeft="@+id/player3Name"
        android:layout_alignStart="@+id/player3Name" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/player3Minus"
        android:layout_below="@+id/player3Name"
        android:layout_toRightOf="@+id/player3Minus5"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/player3Plus"
        android:layout_below="@+id/player3Name"
        android:layout_toRightOf="@+id/player3Minus"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+ 5"
        android:id="@+id/player3Plus5"
        android:layout_below="@+id/player3Name"
        android:layout_toRightOf="@+id/player3Plus"
        />



    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="- 5"
        android:id="@+id/player4Minus5"
        android:layout_below="@+id/player4Name"
        android:layout_alignLeft="@+id/player4Name"
        android:layout_alignStart="@+id/player4Name" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/player4Minus"
        android:layout_below="@+id/player4Name"
        android:layout_toRightOf="@+id/player4Minus5"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/player4Plus"
        android:layout_below="@+id/player4Name"
        android:layout_toRightOf="@+id/player4Minus"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+ 5"
        android:id="@+id/player4Plus5"
        android:layout_below="@+id/player4Name"
        android:layout_toRightOf="@+id/player4Plus"
        />

</RelativeLayout>
